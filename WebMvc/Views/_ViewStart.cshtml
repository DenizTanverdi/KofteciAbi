@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    dynamic Layout;
    switch (CurrentName)
    {
        case "Home":
            Layout = "~/Views/Shared/Layout.cshtml";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/AdminLayout.cshtml";
            break;
    }
}  
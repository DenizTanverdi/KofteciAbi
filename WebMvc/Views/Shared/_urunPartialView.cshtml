@using WebMvc.Models
@model List<Urunler>


<h2>
    ÜRÜNLER LİSTESİ

</h2>



<br />
<table class="table table-bordred table-striped">
    <tr>

        <th>
            Ürün Adı
        </th>
        <th>
            ADET
        </th>
        <th>
            FİYAT
        </th>
        <th>
            URL
        </th>
        <th>
            OLUŞTURMA TARİHİ
        </th>
        <th>
            GÜNCELLEME TARİHİ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.UrunAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OlusturmaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuncellemeTarihi)
            </td>
            <td>
                @Ajax.ActionLink("Düzenle", "editUrun", new { id = item.Id }, new AjaxOptions()
           {
               HttpMethod = "Get",
               UpdateTargetId = "urun",
               OnSuccess = "showModal",
               InsertionMode = InsertionMode.Replace,
               LoadingElementId = "divLoading",
               LoadingElementDuration=250
           },new { @class = "btn btn-primary", data_target = "#exampleModalLong" })

                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<div class="modal fade " id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="urun">





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>


    </div>
</div>
<button class="btn btn-success">
    @Html.ActionLink("Create New", "Create")
</button>
<button class="btn btn-danger">
    @Html.ActionLink("Ana Sayfa", "LoginKontrol", "Login")
</button>


<script>
    function showModal() {
        $('#exampleModalLong').modal('show');
    }
</script>
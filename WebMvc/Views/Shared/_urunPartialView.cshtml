@using WebMvc.Models
@model List<Urunler>


<h1>
    ÜRÜNLER LİSTESİ

</h1>



<br />
<table class="table table-bordred table-striped">
    <tr>

        <th>
            Ürün Adı
        </th>
        <th>
            ADET
        </th>
        <th>
            FİYAT
        </th>
        <th>
            URL
        </th>
        <th>
            OLUŞTURMA TARİHİ
        </th>
        <th>
            GÜNCELLEME TARİHİ
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.UrunAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OlusturmaTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuncellemeTarihi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<button class="btn btn-success">
    @Html.ActionLink("Create New", "Create")
</button>
<button class="btn btn-danger">
    @Html.ActionLink("Ana Sayfa", "LoginKontrol", "Login")
</button>

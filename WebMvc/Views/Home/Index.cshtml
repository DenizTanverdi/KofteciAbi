

@model IEnumerable<WebMvc.Models.Image>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using WebMvc.Models
<header>

    <br />
    <div>
        <div class="container">
            <div class="jumbotron container">
                <img src="~/Resim/Hosgeldiniz.png" alt="Hoşgeldiniz" width="100%" height="100%" />

            </div>
        </div>
    </div>

</header>
<br />
<div class=" body-content">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div>
            <div class="carousel-inner" role="listbox">


                @{int sayi = 0;

                    foreach (var item in Model)
                    {
                        string link = "";
                        string baslik = "";
                        string aciklama = "";
                        link = "/Images/" + item.Url;
                        baslik = item.Baslik;
                        aciklama = item.Aciklama;
                        if (sayi == 0)
                        {

                            <div class="item active">
                                <img src="@link" width="100%" height="100%">
                                <div class="carousel-caption">
                                    <h3>@baslik</h3>
                                    <p>@aciklama</p>
                                </div>

                            </div>
                            sayi++;
                        }
                        else
                        {
                            <div class="item ">
                                <img src="@link" width="100%" height="100%">
                                <div class="carousel-caption">
                                    <h3>@baslik</h3>
                                    <p>@aciklama</p>
                                </div>

                            </div>
                        }
                    }





                }

            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div style="text-align:center" id="Urunler">

    <h1 style="text-align:center">MENÜ</h1>
</div>


@foreach (var item in ViewBag.kategoriListele)
{
    string link = "";
    string baslik = "";
    string aciklama = "";
    link = "/Images/" + item.url;

    <hr class="featurette-divider">
    <div class="container">
        <div class="row featurette">
            <div class="col-md-7">
                <h1 class="featurette-heading" style="text-transform:uppercase;font-family:Chalkduster,serif">@item.KategoriAdi </h1>
                @foreach (var urn in ViewBag.urunListele)
                {
                    if (urn.kategoriId == item.Id)
                    {
                        <div class="row">
                            <div class="col-md-8"><h3 style="text-transform: uppercase" ;><bold>@urn.UrunAdi</bold></h3></div>
                            <div class="col-md-3">
                                <h3 style="text-transform: uppercase" ;>       <bold>@urn.Fiyat <img src="~/Images/tl.png" alt="TL" height="4%" width="4%" /> </bold></h3>
                            </div>

                        </div>

                    }

                }
            </div>

            <div class="col-md-5">
                <img src="@link" width="445" height="250" />
            </div>
        </div>
    </div>
}
    <div class="container" id="hakkimizda">
        @foreach (var yazi in ViewBag.yazi)
        {
            <h1 style="font-family:'Berlin Sans FB';color:#000000;margin-bottom:24px;">@yazi.Baslik</h1>
            <div class="container rw">

                <p>
                    @yazi.Aciklama
                </p>


            </div>
        }
    </div>


